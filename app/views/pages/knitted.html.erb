<%= render "pages/products/knitted/knitted_main" %>


<script type="text/javascript">
  function switch_pics() {
    if($('.children').css('display') == "block") {
      $('.children').hide();
      $('.ladies').fadeIn(1500);
    } else if($('.ladies').css('display') == 'block') {
      $('.ladies').hide();
      $('.mens').fadeIn(1500);
    } else {
      $('.mens').hide();
      $('.children').fadeIn(1500);
    }
  }
  setInterval(switch_pics, 4000); 
</script>